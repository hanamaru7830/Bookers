<body>
  <p id="notice"></p>
  <h1>Books</h1>
  <!--tableタグの中では<tr><td>を使う-->
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <!--リンク用の列を作る-->
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
       <% @books.each do |book| %>
       <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "show", book_path(book.id) %></td>
          <td><%= link_to "edit", edit_book_path(book.id) %></td>
          <td><%= link_to "destroy", destroy_book_path(book.id), method:delete, "date-confirm" => "Are you sure?" %></td>
        </tr>
       <% end %>
    </tbody>
  </table>

<!-フォーム部分-->
  <h2>New book</h2>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
  <label for="book_body">Body</label>
  <%= f.text_area :body %>
  
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
</body>
